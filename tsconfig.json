{
  "compilerOptions": {
    "outDir": "build/",
    "noImplicitAny": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "esnext",
    "lib": ["es2019", "dom"],
    "jsx": "react",
    "resolveJsonModule": true,
    "allowJs": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["./src/**/*"]
}
